Import( '*' )

# environment
build_dir = 'build' + '/' + configuration + '/' + env['CC'] + '/' + str(bits) + '/ui/'
env.VariantDir( build_dir, '#', duplicate = 0 )
ui_env = env.Clone()

# sources
files = [
	'game/bg_misc.cpp',
	'game/bg_saberLoad.cpp',
	'game/bg_saga.cpp',
	'game/bg_vehicleLoad.cpp',
	'game/bg_weapons.cpp',
	'JAPP/jp_crash.cpp',
	'JAPP/jp_tokenparser.cpp',
	'ui/ui_atoms.cpp',
	'ui/ui_cvar.cpp',
	'ui/ui_force.cpp',
	'ui/ui_gameinfo.cpp',
	'ui/ui_main.cpp',
	'ui/ui_saber.cpp',
	'ui/ui_shared.cpp',
	'ui/ui_syscalls.cpp',
	'qcommon/q_math.cpp',
	'qcommon/q_shared.cpp'
]
files = [build_dir + f for f in files]

# libraries
libraries = [
	'json'
]
if bits == 32:
	libraries += [ 'libudis86' ]
ui_env['LIBS'] = [
	ui_env.SConscript(
		'#/' + lib + '/SConscript',
		exports = [ 'arch', 'bits', 'build_dir', 'configuration', 'env', 'plat' ]
	) for lib in libraries
]

if plat == 'Windows' and bits == 32:
	ui_env['LIBS'] += [ 'user32' ]

# project settings
ui_env['CPPPATH'] += [ '#/ui' ]
ui_env['CPPDEFINES'] += [ 'PROJECT_UI' ]
ui_env['LIBPREFIX'] = ''

# targets
ui_env.SharedLibrary( '#' + configuration + '/ui' + arch, files )
